<html>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
  <style>
    .logedin {
      max-width: 100px;
      margin: 0 auto;
      padding: 20px;
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background-color: #4caf50;
      color: #fff;
      border: none;
      border-radius: 5px;
      font-size: 16px;
    }
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    h1 {
      color: #333;
      font-family: "Arial", sans-serif;
      font-size: 36px;
      color: #333;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-top: 40px;
      margin-bottom: 20px;
    }

    img {
      max-width: 300px;
      margin-bottom: 20px;
    }

    form {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"] {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    input[type="submit"],
    input[type="button"] {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
     
     
    }
    .button {
        display: inline-block;
        padding: 10px 20px;
        margin-right: 10px;
        text-decoration: none;
        color: #fff;
        background-color: #333;
        border-radius: 5px;
      }
    
    img.logo {
      position: absolute;
      top: 10px;
      right: 10px;
    }
  </style>
  <div style="display: flex; justify-content: center; flex-wrap: wrap">
    <a href="/movies" class="button">Movies</a>
    <a href="/users" class="button">Manage User</a>
  </div>
  <div class="logedin">
    <% if (dataLogin) { %>
    <div>Welcome, <%= dataLogin.userName %>!</div>
    <!-- Display the username from the dataLogin object -->
    <% } else { %>
    <div>Welcome, <%= dataLogin.userName %>!</div>
    <!-- Display the user's name -->
    <% } %>
  </div>
  <img
    src="https://img.icons8.com/?size=50&id=lEV2xeBg4PUI&format=png"
    alt="Logo"
    class="logo"
  />

  <body>
    <form action="/movies/edit/<%= moviedata.id %>" method="POST">
      <h1>Edit Movie: <%= moviedata.name %></h1>
      <img src="<%= moviedata.image %>" />

      <label for="name">Name:</label>
      <input value="<%= moviedata.name %>" name="name" type="text" />

      <label for="genres">Genres:</label>
      <input value="<%= moviedata.genres %>" name="genres" type="text" />

      <label for="image">Image URL:</label>
      <input value="<%= moviedata.image %>" name="image" type="text" />

      <label for="premiered">Premiered:</label>
      <input value="<%= moviedata.premiered %>" name="premiered" type="text" />
      


      <input type="submit" value="Update" />
    </form>

    <form action="/movies/all">
        <input type="submit" value="Cancel" style="background-color: red;"/>

      </form>
 
  </body>
</html>
